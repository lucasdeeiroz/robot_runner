{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "store:default",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-exists",
    "notification:default",
    "http:default"
  ],
  "scopes": [
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "http:scope",
      "allow": [
        {
          "url": "https://api.github.com/**"
        }
      ]
    }
  ]
}